<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SupStick.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SupStick.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SupStick">

    <TabBar>
        <ShellContent
            Title="Status"
            ContentTemplate="{DataTemplate local:StatusPage}"
            Route="StatusPage"
            Icon="home.png" />

        <ShellContent
            Title="Player"
            ContentTemplate="{DataTemplate local:MediaPlayerPage}"
            Route="MediaPlayerPage"
            Icon="play.png" />

        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate local:SearchPage}"
            Route="SearchPage"
            Icon="search.png" />

        <ShellContent
            Title="Setup"
            ContentTemplate="{DataTemplate local:SetupPage}"
            Route="SetupPage"
            Icon="settings.png" />
    </TabBar>

</Shell>
